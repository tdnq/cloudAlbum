/* components/Album/album.wxss */
.album{
  width: 300rpx;
  box-sizing: border-box;
  margin: 50rpx 37.5rpx;
  margin-bottom: 0rpx;
  height: 400rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgb(146, 160, 224);
  position: relative;
}
.album_image{
  max-width: 100%;
  height: 400rpx;
  opacity: 0.95;
}
.album_info{
  position: absolute;
  bottom: 0;
  height: 53rpx;
  width: 100%;
  background-color: rgba(170, 163, 163, 0.788);
}
.album_info>p{
  padding:4rpx 16rpx;
  color: white;
  height: 100%;
  display: inline-block;

}